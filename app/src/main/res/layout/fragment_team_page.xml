<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.FragmentTeamPage">

    <!-- Background Field Image -->
    <ImageView
        android:id="@+id/field_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Player Icons with TextViews -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="74dp">
        <ImageView
            android:id="@+id/loose_head_prop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_loose_head_prop" />
        <TextView
            android:id="@+id/loose_head_prop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loose Head Prop"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="188dp"
        android:layout_marginTop="74dp">
        <ImageView
            android:id="@+id/hooker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_hooker" />
        <TextView
            android:id="@+id/hooker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hooker"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="318dp"
        android:layout_marginTop="74dp">
        <ImageView
            android:id="@+id/tight_head_prop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_tight_head_prop" />
        <TextView
            android:id="@+id/tight_head_prop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tight Head Prop"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="120dp"
        android:layout_marginTop="164dp">
        <ImageView
            android:id="@+id/lock_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_lock_one" />
        <TextView
            android:id="@+id/lock_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock One"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="252dp"
        android:layout_marginTop="164dp">
        <ImageView
            android:id="@+id/lock_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_lock_two" />
        <TextView
            android:id="@+id/lock_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lock Two"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="304dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/blindside_flanker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_blind_side_flanker" />

        <TextView
            android:id="@+id/blindside_flanker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blindside Flanker"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="304dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/number_eight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_number_eight" />

        <TextView
            android:id="@+id/number_eight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Eight"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="304dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/open_side_flanker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_open_side_flanker" />

        <TextView
            android:id="@+id/open_side_flanker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Side Flanker"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="408dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/scrum_half"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_scrum_half" />

        <TextView
            android:id="@+id/scrum_half_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Scrum Half"
            android:textAlignment="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="408dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/flyhalf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_flyhalf"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="408dp" />

        <TextView
            android:id="@+id/flyhalf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Flyhalf"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="458dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="492dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/inside_centre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_inside_center" />

        <TextView
            android:id="@+id/inside_centre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Inside Centre"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="492dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/outside_centre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_outside_center" />

        <TextView
            android:id="@+id/outside_centre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outside Centre"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="592dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/left_wing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_left_wing" />

        <TextView
            android:id="@+id/left_wing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Wing"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="592dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/right_wing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_right_wing" />

        <TextView
            android:id="@+id/right_wing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Wing"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="188dp"
        android:layout_marginTop="584dp">

        <ImageView
            android:id="@+id/fullback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_fullback" />

        <TextView
            android:id="@+id/fullback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fullback"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Bench Horizontal ScrollView -->
    <HorizontalScrollView
        android:id="@+id/benchScrollView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone"
        android:background="#BF000000"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Bench Slots -->
            <ImageView
                android:id="@+id/sixteen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_sixteen"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/seventeen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_seventeen"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/eighteen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_eighteen"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/nineteen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_nineteen"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/twenty"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_twenty"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/twenty_one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_twenty_one"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/twenty_two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_twenty_two"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/twenty_three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_twenty_three"
                android:layout_margin="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bench Button positioned on top right corner above the ScrollView -->
    <ImageView
        android:id="@+id/benchButton"
        android:layout_width="69dp"
        android:maxHeight="38dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bench_icon"
        android:contentDescription="Bench Button"
        app:layout_constraintBottom_toTopOf="@id/benchScrollView"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>