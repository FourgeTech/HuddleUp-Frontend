<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_profile">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/profile_icon"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_profile"
        android:layout_alignParentTop="true" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aidan Smith"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:layout_toEndOf="@id/imgProfile"
        android:layout_alignTop="@id/imgProfile"
        android:layout_alignParentEnd="true" />

    <!-- Time of post -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7min"
        android:textSize="11sp"
        android:fontFamily="@font/poppins"
        android:textColor="#808080"
        android:layout_toEndOf="@id/imgProfile"
        android:layout_marginStart="15dp"
        android:layout_below="@id/tvName"
        android:layout_alignBottom="@id/imgProfile" />

    <!-- Announcement Text -->
    <TextView
        android:id="@+id/tvAnnouncementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="8dp"
        android:text="Practice Rescheduled for 5PM"
        android:layout_below="@id/imgProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <!-- Eye Icon and View Count -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/green_background"
        android:layout_marginTop="12dp"
        android:layout_below="@id/tvAnnouncementText"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgEye"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_eye" />

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 / 10"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:padding="4dp" />
    </LinearLayout>

    <!-- More Info Link -->


</RelativeLayout>
