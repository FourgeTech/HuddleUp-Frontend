<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Surname" />

    <EditText
        android:id="@+id/editProfilePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profile Picture URL" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Save" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Cancel" />

    <Switch
        android:id="@+id/practiceAlertsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice Alerts" />

    <Switch
        android:id="@+id/matchAlertsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match Alerts" />

    <Switch
        android:id="@+id/chatNotificationsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Notifications" />
</LinearLayout>